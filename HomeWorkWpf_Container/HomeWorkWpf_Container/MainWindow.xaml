        mc:Ignorable="d"
        Title="MainWindow"  Height="240" Width="480" MinHeight="240" MinWidth="640" MaxHeight="240" MaxWidth="480">
    <Grid>
        <DockPanel MouseMove="DockPanel_MouseMove">
            <Button x:Name="buttonChase" Width="50" Height="20" HorizontalAlignment="Left" Content="Button" Margin="220,180,0,0" VerticalAlignment="Top"/>

        </DockPanel>
        <DockPanel MouseMove="DockPanelTwo_MouseMove">
